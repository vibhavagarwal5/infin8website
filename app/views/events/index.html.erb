<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <form method="post" enctype="multipart/form-data" action="/regs/new">
          <p>
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          </p>
          <input hidden name="eid" value= "<%= event.id %>">
          <p>
              <input type="submit" value="Register for this">
          </p>
      </form>
        <!-- <td><%= link_to 'Register for this', event %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
